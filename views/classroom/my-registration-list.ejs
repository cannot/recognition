<%- include('../includes/header.ejs') %>
    <%- include('../includes/nav.ejs') %>
        <div id="layoutSidenav">
            <%- include('../includes/menu.ejs') %>
                <div id="layoutSidenav_content">
                    <main>
                        <div class="container-fluid">
                            <h1 class="mt-4">
                                <%= pageTitle %>
                            </h1>
                            <div class="card-header">
                                <i class="fas fa-table mr-1"></i>
                                <%= pageTitle %>
                            </div>

                            <% if(errMessage) { %>
                                <div class="card mb-4">
                                    <div class="card-body">
                                        <%= errMessage %>
                                    </div>
                                </div>
                                <% } %>
                                    <div class="row">
                                        <div class="col-xl-12 col-md-12">
                                            <div class="card-body">
                                                <div class="table-responsive">
                                                    <table class="table table-bordered" id="dataTable" width="100%"
                                                        cellspacing="0">
                                                        <thead>
                                                            <tr>
                                                                <th>Classroom</th>
                                                                <th>Attendance</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <% if (registrations.length> 0) { %>
                                                                <% for(let registration of registrations) { %>
                                                                    <tr>
                                                                        <td>
                                                                            <%= registration.classroom %>
                                                                        </td>
                                                                        <td><a class=""
                                                                                href="/student-classrooms/<%= registration.classroom %>">Take
                                                                                Attendance</a></td>
                                                                    </tr>
                                                                    <% } %>
                                                                        <%} else { %>
                                                                            <tr>
                                                                                <td colspan="2">No Class Registration
                                                                                </td>
                                                                            </tr>
                                                                            <% } %>
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                        </div>
                    </main>
                    <%- include('../includes/nav-footer.ejs') %>
                </div>
        </div>
        <%- include('../includes/footer.ejs') %>
        <script>

            (function ($) {
                "use strict";

                $('#dataTable').DataTable();


            })(jQuery);

        </script>